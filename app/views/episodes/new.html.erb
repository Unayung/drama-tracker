<h2><%= @drama.name %></h2>
<hr>
<div class="form">
  <%= simple_form_for([@category,@drama,@episode], :html => {:class => "form-horizontal"}) do |f| %>
  <div class="form-group">
  <%= f.input(:season, :input_html => {:class => "form-control"}) %>
  </div>
  <div class="form-group">
  <%= f.input(:number, :input_html => {:class => "form-control"}) %>
  </div>
  <div class="form-group">
  <%= f.input(:title, :input_html => {:class => "form-control"}) %>
  </div>
  <div class="form-group">
  <%= f.input(:description, :input_html => {:class => "form-control"}) %>
  </div>
  <div class="form-group">
  <%= f.input(:play_date, :input_html => {:class => "form-control"}) %>
  </div>
  <div class="form-group">
  <%= f.submit("Create", :class => "btn btn-info") %>
  </div>
  <% end %>
</div>